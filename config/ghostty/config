# Keybindings
# Basic clipboard operations
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

# Window management
keybind = cmd+n=new_window
keybind = cmd+q=quit

# Native Ghostty tab management
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+shift+right_bracket=next_tab
keybind = cmd+shift+left_bracket=previous_tab

# Tab selection
keybind = cmd+one=goto_tab:1
keybind = cmd+two=goto_tab:2
keybind = cmd+three=goto_tab:3
keybind = cmd+four=goto_tab:4
keybind = cmd+five=goto_tab:5
keybind = cmd+six=goto_tab:6
keybind = cmd+seven=goto_tab:7
keybind = cmd+eight=goto_tab:8
keybind = cmd+nine=goto_tab:9

# Native Ghostty split management
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+shift+enter=toggle_split_zoom

# Split navigation
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top
keybind = cmd+l=goto_split:right

# Alternative split navigation with arrows
keybind = cmd+left=goto_split:left
keybind = cmd+down=goto_split:bottom
keybind = cmd+up=goto_split:top
keybind = cmd+right=goto_split:right

# macOS specific
macos-option-as-alt = left
